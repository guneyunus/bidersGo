                                                 <input asp-for="Branch" type="hidden" class="form-control" id="brans">
                                            </div>*@

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                <label asp-for="Password">Şifre</label>
                                                <input asp-for="Password" type="password" class="form-control" id="userpassword" placeholder="Enter password">
                                            </div>

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                <label asp-for="ConfirmPassword">Şifre Tekrarı</label>
                                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmpassword" placeholder="Enter password">
                                            </div>

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                               <select id="selectedLessonSearching" class="form-control select2 select2-hidden-accessible" data-select2-id="1" tabindex="-1" aria-hidden="true"  >
                                                   <option  data-select2-id="3">Lüstfen Ders Arayış Durumunuzu Seçiniz</option> 
                                                   <option value="true">Evet</option> 
                                                   <option value="false">Hayır</option>
                                                </select>
                                                 <input asp-for="IsSearchLesson" type="hidden" class="form-control" id="isSearchLesson" value="">
                                            </div>

                                            <div class="text-center">
                                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Register</button>
                                            </div>

                                            <div class="mt-4 text-center">
                                                <p class="mb-0">By registering you agree to the BiDersGO <a href="#" class="text-primary">Terms of Use</a></p>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="mt-5 text-center">
                                        <p>Üyeliğiniz var mı? <a asp-controller="Account" asp-action="Login">Giriş için tıklayınız..</a></p>
                                        <p>
                                            ©
                                            <script>document.write(new Date().getFullYear())</script> BiDersGO. Crafted with <i class="mdi mdi-book text-danger"></i> by Themesdesign
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="authentication-bg position-relative">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>


