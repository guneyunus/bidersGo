@model bidersGo.Application.Features.Commands.StudenUpdate.StudentUpdateCommandRequest
<div>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-4">
                <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                    <div class="w-100">
                        <div class="row justify-content-center">
                            <div class="col-lg-9">
                                <div>
                                    <div class="text-center">
                                        <div>
                                            <a href=@Url.Action("Index", "Dashboard") class="">
                                                <img src="~/assets/images/logo-dark.png" alt="" height="20" class="auth-logo logo-dark mx-auto">
                                                <img src="~/assets/images/logo-light.png" alt="" height="20" class="auth-logo logo-light mx-auto">
                                            </a>
                                        </div>

                                        <h4 class="font-size-18 mt-4">Ogrenci Guncelleme Ekranina</h4>
                                        <p class="text-muted">Hosgeldiniz</p>
                                        <p class="text-muted">Get your free BiDersGO account now.</p>
                                    </div>

                                    <div class="p-2 mt-5">
                                        <form method="post" asp-controller="Home" asp-action="UpdateStudent">
                                            <div>
                                                <select id="selectStudent" class="form-control select2 select2-hidden-accessible" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                                    <option data-select2-id="3">Lutfen Ogrenci Adi Seciniz</option>
                                                    @foreach (var item in ViewBag.Ogrenciler)
                                                    {
                                                        <option value="@item.Id"> @item.Name  </option>
                                                    }
                                                </select>
                                            </div>
                                            <hr />
                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-mail-line auti-custom-input-icon"></i>
                                                <label asp-for="Name">Ogrenci Adi</label>
                                                <input asp-for="Name" class="form-control" placeholder="Yeni Adi Girin">
                                            </div>
                                            <input type="hidden" asp-for="Id" value="" id="Id" />


                                            <select id="selectStudent1" class="form-control select2 select2-hidden-accessible" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                                <option data-select2-id="3">Lutfen Ogrenci Soyadi Seciniz</option>
                                                @foreach (var item in ViewBag.Ogrenciler)
                                                {
                                                    <option value="@item.Id"> @item.Surname  </option>
                                                }
                                            </select>
                                            <hr />
                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-mail-line auti-custom-input-icon"></i>
                                                <label asp-for="Surname">Ogrenci Soyadi</label>
                                                <input asp-for="Surname" class="form-control" placeholder="Yeni Soyadi Girin">
                                            </div>
                                            <input type="hidden" asp-for="Id" value="" id="Id1" />



                                            <hr />

                                            <div class="text-center">
                                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Guncelle</button>
                                            </div>

                                            <div class="mt-4 text-center">
                                                <p class="mb-0">By registering you agree to the BiDersGO <a href="#" class="text-primary">Terms of Use</a></p>
                                            </div>
                                        </form>
                                </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="authentication-bg position-relative">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>

        var selectedStudent = $("#selectStudent");
        var changeStudentName = $("#Id");
        var selectedStudent1 = $("selectStudent1");
        var changeStudentSurname = $("#Id1");


        selectedStudent.on("change", function () {


            changeStudentName.attr("value", selectedStudent.val());
            console.log(selectedStudent.val());

        });
        selectedStudent1.on("change", function ()
        {
            changeStudentSurname.attr("value", selectedStudent1.val());
            console.log(selectedStudent1.val());
                
        });


    </script>
}
