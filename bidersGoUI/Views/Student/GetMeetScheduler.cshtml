            color: #9B6467;
        }

        .dx-scheduler-header-panel-cell .disable-date {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .dinner {
            background: rgba(255, 193, 7, 0.2);
        }

        .dx-scheduler-time-panel-cell .dinner {
            color: rgba(255, 193, 7);
            font-weight: 400;
            background: transparent;
        }

        .dx-draggable {
            cursor: auto;
        }

