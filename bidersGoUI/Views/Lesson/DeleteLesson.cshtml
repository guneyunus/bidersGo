                                                </select>
                                                <input type="hidden" asp-for="Id" value="" id="LessonGuid" />
                                            </div>
                                            <hr />
                                            <div class="text-center">
                                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Delete</button>
                                            </div>

                                            <div class="mt-4 text-center">
                                                <p class="mb-0">By registering you agree to the BiDersGO <a href="#" class="text-primary">Terms of Use</a></p>
                                            </div>
                                        </form>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="authentication-bg position-relative">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>

        var selectedLesson = $("#selectLesson");
        var changeLessonId = $("#LessonGuid");
        

        selectedLesson.on("change", function () {


            changeLessonId.attr("value", selectedLesson.val());
            console.log(changeLessonId.val());
        });
       


    </script>
}

