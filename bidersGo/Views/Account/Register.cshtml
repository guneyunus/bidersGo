@using bidersGo.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ekranı";
    Layout = "~/Views/_Shared/_BlankLayout.cshtml";
}

<div>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-4">
                <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                    <div class="w-100">
                        <div class="row justify-content-center">
                            <div class="col-lg-9">
                                <div>
                                    <div class="text-center">
                                        <div>
                                            <a href=@Url.Action("Index", "Dashboard") class="">
                                                <img src="~/assets/images/logo-dark.png" alt="" height="20" class="auth-logo logo-dark mx-auto">
                                                <img src="~/assets/images/logo-light.png" alt="" height="20" class="auth-logo logo-light mx-auto">
                                            </a>
                                        </div>

                                        <h4 class="font-size-18 mt-4">Register account</h4>
                                        <p class="text-muted">Get your free Nazox account now.</p>
                                    </div>

                                    <div class="p-2 mt-5">
                                        <form  method="post" asp-controller="Account" asp-action="Register" >

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-mail-line auti-custom-input-icon"></i>
                                                <label asp-for="Email" >E-Posta Adresi</label>
                                                <input asp-for="Email" class="form-control" id="useremail" placeholder="Enter email">
                                            </div>

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                <label asp-for="UserName">Kullanıcı Adı</label>
                                                <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="Enter username">
                                            </div>
                                            
                                            
                                            <div id="forModerator" style="display: none;visibility: hidden " class="auth-form-group-custom mb-4">
                                                <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                <label >Kullanıcı Adı</label>
                                                <input type="text" class="form-control" id="username" placeholder="Enter username">
                                            </div>


                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                <label asp-for="Password">Şifre</label>
                                                <input asp-for="Password" type="password" class="form-control" id="userpassword" placeholder="Enter password">
                                            </div>

                                            <div>
                                                <select id="roles">
                                                    @foreach (var item in ViewBag.Roles)
                                                    {
                                                        
                                                        if (item == "Passive" || item == "Modarator")
                                                        {
                                                            continue;
                                                        }
                                                        else
                                                        {
                                                        <option value="@item">@item</option>
                                                        }
                                                        
                                                    }
                                                </select>
                                                <input type="hidden" asp-for="RoleForRegister" value="" />
                                            </div>
                                            

                                            <div class="text-center">
                                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Register</button>
                                            </div>

                                            <div class="mt-4 text-center">
                                                <p class="mb-0">By registering you agree to the Nazox <a href="#" class="text-primary">Terms of Use</a></p>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="mt-5 text-center">
                                        <p>Üyeliğiniz var mı? <a asp-controller="Account" asp-action="Login">Giriş için tıklayınız..</a></p>
                                        <p>
                                            ©
                                            <script>document.write(new Date().getFullYear())</script> Nazox. Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="authentication-bg position-relative">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        var SelectBoxRoles = $("#roles");
        var ForModerator = $("#forModerator");


        SelectBoxRoles.on("change",
            function() {
                console.log(SelectBoxRoles.val());
                if (SelectBoxRoles.val() =="Moderator") {
                    ForModerator.css({ "display": "block", "visibility": "visible" });
                } else {
                    ForModerator.css({ "display": "none", "visibility": "hidden" });
                }

            });
        

    </script>
    
}